rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // السماح بالوصول فقط للمستخدمين المسجلين دخولهم
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // قواعد خاصة لمستندات السائقين
    match /drivers/{driverId}/{documentType} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.auth.uid == driverId &&
        request.resource.size < 5 * 1024 * 1024 && // 5 ميجابايت كحد أقصى
        request.resource.contentType.matches('image/.*'); // صور فقط
    }
    
    // قواعد خاصة للرسائل في الدردشة
    match /orders/{orderId}/{folder}/{messageId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        (request.resource == null || request.resource.size < 10 * 1024 * 1024) && // 10 ميجابايت كحد أقصى
        (folder != 'audio' || (request.resource != null && request.resource.size < 15 * 1024 * 1024)); // 15 ميجابايت للصوتيات
    }
  }
}