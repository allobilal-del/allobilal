    "preferred_width": 400
  },
  "protocol_handlers": [
    {
      "protocol": "web+allo-bilal",
      "url": "/?protocol=%s"
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.allobilal.app",
      "id": "com.allobilal.app"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/us/app/allo-bilal/id123456789"
    }
  ],
  "prefer_related_applications": false,
  "features": [
    "cross-origin-isolated",
    "geolocation",
    "microphone",
    "camera",
    "web-share",
    "payment"
  ],
  "share_target": {
    "action": "/share.html",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "file_handlers": [
    {
      "action": "/upload.html",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif"]
      }
    }
  ]
